\version "2.18.2"
% [TITLE INFO IN COMMENT]
\language "english" % Changes the language of input to english

% common markings in usual format
rit = \markup{ \italic "rit."}
Prit = \markup{ \italic "poco rit." }
aTempo = \markup{\italic "a tempo"}
dolce = \markup{ \italic "dolce"}
espress = \markup{ \italic "espress."}
leggi = \markup{ \italic "leggiero"}
cres = \markup{ \italic "cresc."}
rall = \markup{ \italic "rall."}
Fine = \markup{ \italic "Fine" }
PiuMosso = "Pi√π Mosso"
grazi = \markup{ \italic "grazioso"}


% variables for score information
title = "[TITLE]"
composer = "[COMPOSER]"
% subtitle = " [SUBTITLE]"
tag = "Engraved in LilyPond by Frederic Henry [DATE]" % Engraver credit tag

% Variables for parts in piece

FirstPart = \relative c'' { % Variable for the first part. Copy for additional parts. 
\clef "treble"
\time 4/4
\key c \major
\tempo "Allegro"
}

SecondPart = \relative c'' { % Variable for the second part. Copy for additional parts.
\clef "treble"
\time 4/4
\key c \major
\tempo "Allegro"
}

% Printing Blocks
\book{ % Score creator 
\bookOutputSuffix "Score"
\header{
  title = \title
  composer = \composer
  tagline = \tag
  instrument = "Score"
}
\score {
  <<
    \new Staff = "FirstPart" \with {
      instrumentName = #"[INSTRUMENT]"
      shortInstrumentName = #"[ShortName]"
    }{
      \new Voice {
	\FirstPart
      }
    }
    \new Staff = "SecondPart" \with {
      instrumentName = #"[INSTRUMENT]"
      shortInstrumentName = #"[ShortName]"
    }{
      \new Voice {
	\SecondPart
      }
    }
  >>
}
\paper {
  #(set-paper-size "letter")
}
}

\book{ % FirstPart creator 
\bookOutputSuffix "FirstPart"
\header{
  title = \title
  composer = \composer
  tagline = \tag
  instrument = "[INSTRUMENT]"
}
\score {
  \new Staff = "FirstPart" {
    \new Voice {
      \FirstPart
    }
  }
}
\paper {
  #(set-paper-size "letter")
}
}

\book{ % SecondPart creator 
\bookOutputSuffix "SecondPart"
\header{
  title = \title
  composer = \composer
  tagline = \tag
  instrument = "[INSTRUMENT]"
}
\score {
  \new Staff = "SecondPart" {
    \new Voice {
      \SecondPart
    }
  }
}
\paper {
  #(set-paper-size "letter")
}
}
